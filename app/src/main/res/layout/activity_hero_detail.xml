<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_app"
    android:theme="@style/Theme.SuperHero"
    tools:context=".HeroDetail">

    <ProgressBar
        android:layout_width="wrap_content"
        android:id="@+id/pbDetail"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/heroNames"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="30sp"
        android:layout_marginVertical="12dp"
        android:textColor="#B0E4E3E3"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imageDetail"
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:importantForAccessibility="no"
        android:layout_marginTop="6dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toBottomOf="@+id/heroNames"
        tools:ignore="ImageContrastCheck" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:elevation="10dp"
        app:cardBackgroundColor="#908545F6"
        app:cardCornerRadius="12dp"
        android:visibility="gone"
        android:layout_marginTop="240dp">

        <TextView
            android:id="@+id/fullName"
            android:layout_width="match_parent"
            android:layout_marginTop="20sp"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textSize="40sp"
            android:layout_height="wrap_content"
            tools:ignore="VisualLintOverlap" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            android:background="#81B89AEF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bold3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20sp"
                android:text="Gender"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck" />

            <TextView
                android:id="@+id/gender"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:textColor="#9AEDEDE8"
                android:textSize="22sp"
                android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bold1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="Place of birth"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <TextView
                    android:id="@+id/country"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:textColor="#9AEDEDE8"
                    android:textSize="22sp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/bold2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    android:text="First appearance"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText,TextContrastCheck" />

                <TextView
                    android:id="@+id/appearance"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:textColor="#9AEDEDE8"
                    android:textSize="22sp"
                    android:layout_height="wrap_content" />



        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>